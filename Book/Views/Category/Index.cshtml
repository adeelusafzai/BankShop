@model List<Category>

<div class="container">
    <div class="row pt-2 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-dark rounded rounded-2">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
<table class="table table-light table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id=@obj.ID class="btn btn-dark rounded mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id=@obj.ID class="btn btn-danger rounded mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>